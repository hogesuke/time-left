.result-text {
  font-size: 22px;
  text-align: center;

  .percentage {
    color: #ed6c63;
  }
}

#graph {
  margin: 20px 0;

  .passed-block, .unpassed-block {
    float: left;
    height: 20px;
  }

  .passed-block {
    background-color: #ed6c63;
    border-radius: 3px 0 0 3px;
  }

  .unpassed-block {
    background-color: #42afe3;
    border-radius: 0 3px 3px 0;
  }

  .center-age {
    padding-left: 49%;
  }
}

#share {
  margin: 20px 0;
  text-align: center;

  button {
    padding: 10px 20px;
    background-color: #00ACEE;
    border: none;
    border-radius: 3px;
    font-size: 14px;
    color: #FFFFFF;
  }
}
  
.result-transition {
  transition: all .3s ease;
}

.result-enter, .result-leave {
  opacity: 0;
}
